            </wadl:resource>
            <wadl:resource 
                href="https://raw.githubusercontent.com/rackerlabs/docs-cloud-cdn/master/src/wadl/cdn-devguide.wadl#ping">
                <wadl:method href="#getPing"/>
            </wadl:resource>
        </wadl:resources>
    </section>
        
    <section xml:id="raxcdn_ServicesOperations">
